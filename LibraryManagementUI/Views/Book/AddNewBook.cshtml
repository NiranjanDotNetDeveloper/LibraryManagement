@{
        ViewData["Title"] = "Add New Book";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using LibraryManagementCore.DTOs
@model BookResponseDTO
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

<form asp-action="AddNewBook" asp-controller="Book" method="post">
<label asp-for="Title" class="form-control">Title</label>
<input asp-for="@Model.Title" class="form-control"/>
    <span asp-validation-for="@Model.Title" class="text-danger"></span>
<br/>
    <label asp-for="Author" class="form-control">Author</label>
    <input asp-for="@Model.Author" class="form-control"/>
    <span asp-validation-for="@Model.Author" class="text-danger"></span>
<br />
    <label asp-for="ISBN" class="form-control">ISBN</label>
<input asp-for="@Model.ISBN" class="form-control" />
<br />
    <label asp-for="CopiesAvailable" class="form-control">CopiesAvailable</label>
<input asp-for="@Model.CopiesAvailable" class="form-control" />
    <span asp-validation-for="@Model.CopiesAvailable" class="text-danger"></span>
<br />
    <label asp-for="Price" class="form-control">Price</label>
<input asp-for="@Model.Price" class="form-control" />
    <span asp-validation-for="@Model.Price" class="text-danger"></span>
    <br />
    <button class="btn btn-Primary" type="submit">Create</button>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
