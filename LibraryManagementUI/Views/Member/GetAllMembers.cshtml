@{
    Layout = "_Layout";
}
@using LibraryManagementCore.DTOs
@model List<MemberResponseDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Member";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
<h1 class="text-center text-primary">Members</h1>
<a asp-controller="Member" asp-action="AddNewMembers" class="btn btn-primary text-center mt-1">Add</a>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>MembershipDate</th>
            <th>MembershipType</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.MembershipDate</td>
                <td>@item.MembershipType</td>
                <td><a asp-controller="Member" asp-action="UpdateMembers" asp-route-name="@item.Name" class="btn btn-warning">Edit</a><a asp-controller="Member" asp-action="RemoveMember" asp-route-name="@item.Name" class="btn btn-danger ms-1">Remove</a></td>
            </tr>
        }
    </tbody>
</table>

