@{
    ViewData["Title"] = "Add New Transaction";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using LibraryManagementCore.DTOs
@model TransactionRequestDTO
@{
    TempData.Keep("SuccessMessage");
    TempData.Keep("ErrorMessage");
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<form asp-action="AddTransaction" asp-controller="Transaction" method="post">
    <label asp-for="BookId" class="form-control">Title</label>
    <select asp-for="@Model.BookId" asp-items="@ViewBag.Book"  class="form-control">
        <option value="@Model.BookId">Select Book</option>
        </select>
    <br />
    <select asp-for="@Model.MemberId" asp-items="@ViewBag.Member"  class="form-control">
        <option value="@Model.MemberId">Select Member</option>
    </select>
    <span asp-validation-for="@Model.MemberId" class="text-danger"></span>
    <br />
    <label asp-for="BorrowDate" class="form-control">BorrowDate</label>
    <input asp-for="@Model.BorrowDate" class="form-control" type="date" />
    <span asp-validation-for="@Model.BorrowDate" class="text-danger"></span>
    <br />
    <label asp-for="ReturnDate" class="form-control">ReturnDate</label>
    <input asp-for="@Model.ReturnDate" class="form-control" type="date" />
    <span asp-validation-for="@Model.ReturnDate" class="text-danger"></span>
    <br />
    <label asp-for="FineAmount" class="form-control">FineAmount</label>
    <input asp-for="@Model.FineAmount" class="form-control" />
    <span asp-validation-for="@Model.FineAmount" class="text-danger"></span>
    <br />
    <button class="btn btn-Primary" type="submit">Create</button>
</form>

